{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ],
            "label": "npm: build",
            "detail": "compile extension and build webview"
        },
        {
            "type": "npm",
            "script": "dev",
            "isBackground": true,
            "group": {
                "kind": "build"
            },
            "problemMatcher": [
                "$tsc-watch",
                {
                    "owner": "typescript",
                    "source": "vite",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "pattern": {
                        "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
                        "file": 1,
                        "location": 2,
                        "severity": 3,
                        "code": 4,
                        "message": 5
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "vite v[\\d\\.]+ building for production...",
                        "endsPattern": "built in \\d+ms\\."
                    }
                }
            ],
            "label": "npm: dev",
            "detail": "concurrently watch extension and webview"
        }
    ]
}