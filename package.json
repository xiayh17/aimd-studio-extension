{
  "name": "aimd-studio",
  "publisher": "yonghe",
  "displayName": "AIMD Studio",
  "description": "A VS Code extension for editing and previewing AIMD protocol files",
  "icon": "resources/icon.png",
  "version": "0.3.2",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "aimd",
    "protocol",
    "scientific",
    "lab",
    "workflow"
  ],
  "activationEvents": [
    "onLanguage:aimd"
  ],
  "main": "./out/extension/index.js",
  "contributes": {
    "languages": [
      {
        "id": "aimd",
        "aliases": [
          "AIMD Protocol",
          "aimd"
        ],
        "extensions": [
          ".aimd"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "aimd",
        "scopeName": "source.aimd",
        "path": "./syntaxes/aimd.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "aimd.preview",
        "title": "Open Preview",
        "category": "AIMD",
        "icon": "$(open-preview)"
      },
      {
        "command": "aimd.previewToSide",
        "title": "Open Preview to the Side",
        "category": "AIMD",
        "icon": "$(split-horizontal)"
      },
      {
        "command": "aimd.helloBackend",
        "title": "Hello Backend (Test Python)",
        "category": "AIMD"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "aimd.preview",
          "when": "resourceLangId == aimd",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "aimd.preview",
          "when": "resourceLangId == aimd",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "AIMD Studio",
      "properties": {
        "aimd.preview.buttonIcon": {
          "type": "string",
          "default": "open-preview",
          "description": "状态栏按钮图标 (Codicon 名称)，例如: open-preview, eye, preview, split-horizontal",
          "enum": [
            "open-preview",
            "eye",
            "preview",
            "split-horizontal",
            "markdown",
            "file-code",
            "desktop-download",
            "window",
            "split-both"
          ],
          "enumDescriptions": [
            "预览图标 (默认)",
            "眼睛图标",
            "预览图标",
            "分割视图图标",
            "Markdown 图标",
            "代码文件图标",
            "下载图标",
            "窗口图标",
            "分割图标"
          ]
        },
        "aimd.preview.buttonText": {
          "type": "string",
          "default": "AIMD Preview",
          "description": "状态栏按钮显示的文本"
        },
        "aimd.preview.buttonTooltip": {
          "type": "string",
          "default": "Open AIMD Preview (点击打开预览)",
          "description": "状态栏按钮悬停提示文本"
        },
        "aimd.preview.buttonPriority": {
          "type": "number",
          "default": 100,
          "description": "状态栏按钮的优先级 (数字越小越靠右)",
          "minimum": 0,
          "maximum": 1000
        },
        "aimd.preview.buttonBackgroundColor": {
          "type": "string",
          "default": "",
          "description": "状态栏按钮背景颜色 (可选，留空使用默认)。支持 VS Code 主题颜色，例如: statusBarItem.prominentBackground",
          "enum": [
            "",
            "statusBarItem.prominentBackground",
            "statusBarItem.warningBackground",
            "statusBarItem.errorBackground",
            "statusBarItem.activeBackground"
          ],
          "enumDescriptions": [
            "默认背景色",
            "突出显示背景色",
            "警告背景色",
            "错误背景色",
            "活动背景色"
          ]
        },
        "aimd.preview.experimental": {
          "type": "boolean",
          "default": true,
          "description": "是否开启实验性渲染界面 (Timeline 视图)"
        },
        "aimd.preview.useVue": {
          "type": "boolean",
          "default": true,
          "description": "Use Vue-based preview renderer (recommended for better performance)"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/aimd-studio-extension"
  },
  "bugs": {
    "url": "https://github.com/your-username/aimd-studio-extension/issues"
  },
  "homepage": "https://github.com/your-username/aimd-studio-extension#readme",
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "npx tsc -p ./",
    "bundle:extension": "esbuild src/extension/index.ts --bundle --outfile=out/extension/index.js --external:vscode --format=cjs --platform=node --minify --sourcemap",
    "build": "npm run bundle:extension && npm run build:webview",
    "build:webview": "npx vite build",
    "watch": "npx tsc -watch -p ./",
    "watch:webview": "npx vite build --watch",
    "dev": "concurrently \"npm run watch\" \"npm run watch:webview\"",
    "lint": "echo 'No linter configured'",
    "package": "vsce package",
    "pretest": "npm run compile",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vscode/vsce": "^2.19.0",
    "esbuild": "^0.27.2",
    "fast-check": "^3.15.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.9.3",
    "vite": "^5.4.21"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.1.1",
    "marked": "^11.0.0",
    "rehype-raw": "^7.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "vue": "^3.5.26"
  }
}